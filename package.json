{
  "name": "command-centre-api",
  "description": "API for the AI powered merchant dashboard",
  "author": "Paystack",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "node -r @paystackhq/nestjs-observability/register dist/main.js",
    "start:dev": "NODE_OPTIONS=\"-r dotenv/config\" nest start --watch",
    "start:debug": "NODE_OPTIONS=\"-r @paystackhq/nestjs-observability/register\" nest start --debug --watch",
    "start:prod": "node -r @paystackhq/nestjs-observability/register dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=0",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:cov": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:cov:ci": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --ci --watchAll=false",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config ./test/jest-e2e.json",
    "test:e2e:ci": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config ./test/jest-e2e.json --ci --watchAll=false",
    "test:all": "npm run test:cov:ci && npm run test:e2e:ci",
    "prepare": "test -d .git && husky install || true",
    "lint-staged": "lint-staged",
    "ci:check": "npm run format:check && npm run lint:check && npm run test:all",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm -- migration:create ./src/database/migrations/migration",
    "migration:generate": "npm run typeorm -- migration:generate ./src/database/migrations/autogenerated -d src/database/datasource.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/datasource.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/datasource.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/database/datasource.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.80",
    "@langfuse/otel": "^4.5.1",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.2",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@paystackhq/nestjs-observability": "^1.2.0",
    "@paystackhq/pkg-response-code": "^3.0.0",
    "ai": "^5.0.110",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "langfuse": "^3.38.6",
    "mongodb": "^6.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.48.0"
  },
  "engines": {
    "node": "=24.5.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
